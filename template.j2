  <section class="py-10 bg-gray-50 scroll-mt-8" id="themes">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {% for theme in themes %}
        <div class="bg-white rounded-xl shadow-lg overflow-hidden transition transform hover:-translate-y-1 hover:shadow-xl">
          <div class="relative group w-full h-55">
              <img src="{{ theme.src | e }}" alt="{{theme.alt}}" class="w-full h-full object-cover" />
              <div class="absolute bottom-2 left-2 bg-black opacity-75 text-white text-xs/2 p-1 rounded-full flex items-center justify-center">
                ©
              </div>
              {% if theme.cc %}
              <div class="absolute bottom-0 left-0 bg-black bg-opacity-50 text-white text-xs/2 p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                {{ theme.cc }}
                {% if theme.origin_url %}
                  <a href="{{ theme.origin_url }}" class="underline">({{ image_source }})</a>
                {% endif %}
              </div>
              {% endif %}
          </div>

          <div class="p-6">
            <h2 class="text-2xl font-semibold mb-3">{{ theme.title }}</h2>
            <p class="text-gray-600">{{ theme.description }}</p>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </section>

